<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="#000000"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="185dp"
            android:layout_height="173dp"
            app:srcCompat="@drawable/ic_electronic_detail"
            android:id="@+id/imageView4"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_join_bt_server"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.052"/>

    <Button
            android:text="Crear servidor"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/test"
            style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
            android:textSize="24sp"
            tools:layout_editor_absoluteY="296dp"
            tools:layout_editor_absoluteX="8dp"/>

    <Button
            android:text="Unirse a un chat"
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:id="@+id/btn_join_bt_server"
            android:textSize="24sp"
            style="@style/Widget.MaterialComponents.BottomAppBar.Colored"
            tools:layout_editor_absoluteY="392dp"
            tools:layout_editor_absoluteX="8dp"/>

    <ImageView
            android:layout_width="182dp"
            android:layout_height="182dp"
            app:srcCompat="@drawable/ic_circuit_print"
            android:id="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.051"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/test"/>

    <ImageView
            android:layout_width="182dp"
            android:layout_height="182dp"
            app:srcCompat="@drawable/ic_circuit_print"
            android:id="@+id/imageView7"
            app:layout_constraintTop_toBottomOf="@+id/btn_join_bt_server"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintVertical_bias="0.494"/>

    <ImageView
            android:layout_width="185dp"
            android:layout_height="173dp"
            app:srcCompat="@drawable/ic_electronic_detail"
            android:id="@+id/imageView6"
            android:rotation="90"
            android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/test"
            android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintHorizontal_bias="0.947"
            app:layout_constraintVertical_bias="0.563"/>

</androidx.constraintlayout.widget.ConstraintLayout>